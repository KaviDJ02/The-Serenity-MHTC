<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="1000.0" stylesheets="@../styles/AdminDash.css"
            xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="live.kavinduj.theserenitymhtc.controller.AdminDashController">
    <children>
        <VBox prefHeight="600.0" prefWidth="200.0" fx:id="sideBar">
            <children>
                <HBox alignment="CENTER" prefHeight="70.0" fx:id="headerBox">
                    <children>
                        <Label text="Therapy Center" fx:id="titleLabel">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <VBox spacing="3.0" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets top="10.0" />
                    </padding>
                    <children>
                        <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity"
                                mnemonicParsing="false" onAction="#navDash" prefHeight="45.0"
                                text="Dashboard" fx:id="dashboardBtn">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                            <padding>
                                <Insets left="20.0" />
                            </padding>
                        </Button>
                        <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity"
                                mnemonicParsing="false" onAction="#navAppoinments" prefHeight="45.0"
                                text="Appointments" fx:id="appointmentsBtn">
                            <font>
                                <Font size="12.0" />
                            </font>
                            <padding>
                                <Insets left="20.0" />
                            </padding>
                        </Button>
                        <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity"
                                mnemonicParsing="false" onAction="#navPatitnt" prefHeight="45.0"
                                text="Patients" fx:id="patientsBtn">
                            <font>
                                <Font size="12.0" />
                            </font>
                            <padding>
                                <Insets left="20.0" />
                            </padding>
                        </Button>
                        <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity"
                                mnemonicParsing="false" onAction="#navTherapist" prefHeight="45.0"
                                text="Therapists" fx:id="therapistsBtn">
                            <font>
                                <Font size="12.0" />
                            </font>
                            <padding>
                                <Insets left="20.0" />
                            </padding>
                        </Button>
                        <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity"
                                mnemonicParsing="false" onAction="#navPrograms" prefHeight="45.0"
                                text="Programs" fx:id="programsBtn">
                            <font>
                                <Font size="12.0" />
                            </font>
                            <padding>
                                <Insets left="20.0" />
                            </padding>
                        </Button>
                        <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity"
                                mnemonicParsing="false" onAction="#navBilling" prefHeight="45.0"
                                text="Billing" fx:id="billingBtn">
                            <font>
                                <Font size="12.0" />
                            </font>
                            <padding>
                                <Insets left="20.0" />
                            </padding>
                        </Button>
                        <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity"
                                mnemonicParsing="false" onAction="#navReports" prefHeight="45.0"
                                text="Reports" fx:id="reportsBtn">
                            <font>
                                <Font size="12.0" />
                            </font>
                            <padding>
                                <Insets left="20.0" />
                            </padding>
                        </Button>
                    </children>
                </VBox>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" fx:id="footerBox">
                    <children>
                        <Region prefHeight="50.0" prefWidth="15.0" />
                        <VBox>
                            <children>
                                <Label text="Admin User" fx:id="adminLabel">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <Label text="Logout" fx:id="logoutLabel">
                                    <font>
                                        <Font size="10.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
            <effect>
                <DropShadow height="20.0" radius="9.5" width="20.0">
                    <color>
                        <Color opacity="0.15" />
                    </color>
                </DropShadow>
            </effect>
        </VBox>
        <AnchorPane fx:id="loadPageAnchor" layoutX="200.0" prefHeight="600.0" prefWidth="800.0" />
    </children>
</AnchorPane>
