<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="30.0" stylesheets="@../styles/DashBoard.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="live.kavinduj.theserenitymhtc.controller.DashBoardController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="40.0" />
   </padding>
   <children>
      <Label text="Welcome to Mental Health Therapy Center">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" spacing="25.0">
         <children>
            <VBox alignment="CENTER" minHeight="120.0" minWidth="170.0" styleClass="card">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label fx:id="therapistsCount" text="0" styleClass="count-label"/>
                  <Label text="Therapists" styleClass="caption-label"/>
               </children>
               <effect>
                  <DropShadow height="10.0" radius="4.5" width="10.0">
                     <color>
                        <Color opacity="0.1" />
                     </color>
                  </DropShadow>
               </effect>
            </VBox>
            <VBox alignment="CENTER" minHeight="120.0" minWidth="170.0" styleClass="card">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label fx:id="patientsCount" text="0" styleClass="count-label"/>
                  <Label text="Patients" styleClass="caption-label"/>
               </children>
               <effect>
                  <DropShadow height="10.0" radius="4.5" width="10.0">
                     <color>
                        <Color opacity="0.1" />
                     </color>
                  </DropShadow>
               </effect>
            </VBox>
            <VBox alignment="CENTER" minHeight="120.0" minWidth="170.0" styleClass="card">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label fx:id="programsCount" text="0" styleClass="count-label"/>
                  <Label text="Programs" styleClass="caption-label"/>
               </children>
               <effect>
                  <DropShadow height="10.0" radius="4.5" width="10.0">
                     <color>
                        <Color opacity="0.1" />
                     </color>
                  </DropShadow>
               </effect>
            </VBox>
            <VBox alignment="CENTER" minHeight="120.0" minWidth="170.0" styleClass="card">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label fx:id="sessionsCount" text="0" styleClass="count-label"/>
                  <Label text="Sessions Today" styleClass="caption-label"/>
               </children>
               <effect>
                  <DropShadow height="10.0" radius="4.5" width="10.0">
                     <color>
                        <Color opacity="0.1" />
                     </color>
                  </DropShadow>
               </effect>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
