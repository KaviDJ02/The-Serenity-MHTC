<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="mainAnchor" prefHeight="600.0" prefWidth="1000.0" stylesheets="@../styles/LogIn.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="live.kavinduj.theserenitymhtc.controller.LogInController">
   <children>
      <Rectangle height="600.0" width="500.0" AnchorPane.leftAnchor="0.0">
         <fill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop>
                     <color>
                        <Color red="0.2" green="0.6" blue="0.8" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="0.4" green="0.3" blue="0.8" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </fill>
      </Rectangle>

      <Text layoutX="120.0" layoutY="300.0" text="Therapy Center" styleClass="logo-text" />

      <VBox alignment="CENTER" layoutX="550.0" layoutY="150.0" prefHeight="300.0" prefWidth="350.0" spacing="20.0" styleClass="form-card">
         <effect>
            <DropShadow height="20.0" radius="9.5" width="20.0">
               <color>
                  <Color opacity="0.1" />
               </color>
            </DropShadow>
         </effect>
         <children>
            <Text text="Welcome Back" styleClass="title-text">
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </Text>

            <TextField fx:id="txtEmail" promptText="Email" prefHeight="40.0" prefWidth="250.0" styleClass="input-field"/>
            <PasswordField fx:id="txtPassword" promptText="Password" prefHeight="40.0" prefWidth="250.0" styleClass="input-field"/>

            <Button fx:id="btSignIn" text="Sign In" onAction="#navHomePage" prefHeight="40.0" prefWidth="290.0" styleClass="signin-button" />

            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Text text="Don't have an account?" styleClass="plain-text"/>
                  <Text text="Sign up" onMouseClicked="#navSignUp" styleClass="link-text"/>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
